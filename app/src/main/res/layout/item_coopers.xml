<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_margin="@dimen/middle_dis"
        android:elevation="@dimen/middle_dis">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cooperCom"
                        style="@style/blackTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingLeft="@dimen/normal_dis"
                        android:textColor="@color/level2_gray_light"
                        android:paddingTop="@dimen/middle_dis"
                        android:text="合作公司"
                        android:textSize="@dimen/textSize_5" />

                    <TextView
                        android:id="@+id/tvCooperName"
                        style="@style/blackTextView"
                        android:paddingTop="@dimen/lowest_dis"
                        android:gravity="center_horizontal|top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/normal_dis"
                        android:text="namexxx"
                        android:textSize="@dimen/textSize_1" />
                </LinearLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cooperPoint"
                        style="@style/blackTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/normal_dis"
                        android:paddingTop="@dimen/middle_dis"
                        android:textColor="@color/level2_gray_light"
                        android:text="合作网点"
                        android:textSize="@dimen/textSize_5" />

                    <TextView
                        android:id="@+id/tvPointName"
                        style="@style/blackTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/normal_dis"
                        android:paddingTop="@dimen/lowest_dis"
                        android:text="name"
                        android:gravity="center_horizontal|top"
                        android:textSize="@dimen/textSize_1" />
                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/level3_gray_light2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCooperState"
                    style="@style/blackTextView"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/middle_dis"
                    android:background="@color/color_white"
                    android:text="@string/state"
                    android:textColor="@color/color_darkBlue" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvCooperChange"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/middle_dis"
                    android:background="@drawable/trans_not"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_white" />


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
