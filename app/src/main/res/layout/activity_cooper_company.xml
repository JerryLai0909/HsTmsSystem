<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/level4_gray_light3"
    android:layout_height="match_parent">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:layout_width="match_parent"
        android:id="@+id/titleBar"
        android:layout_height="wrap_content">

    </com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="@dimen/lower_dis"

        android:layout_marginLeft="@dimen/lower_dis"
        android:layout_marginRight="@dimen/lower_dis"
        app:cardCornerRadius="@dimen/lower_dis"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edCompanyName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/entry_companyName"
                android:paddingLeft="@dimen/middle_dis"
                android:textSize="@dimen/textSize_2" />

            <TextView
                android:layout_width="70dp"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/color_white"
                android:background="@color/color_darkBlue"
                android:id="@+id/tvSearch"
                android:layout_height="match_parent" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <com.infinity.jerry.yyd_tms.ui.customview.Z_SwipeListView
        android:id="@+id/swipeListView"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/lower_dis"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.infinity.jerry.yyd_tms.ui.customview.Z_SwipeListView>

</LinearLayout>
