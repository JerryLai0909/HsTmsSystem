<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/lower_dis"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/lower_dis"
        app:cardElevation="@dimen/lowest_dis">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/grid_im_main"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:src="@mipmap/tms_icon_bill" />

            <TextView
                android:id="@+id/grid_tv_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grid_im_main"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginTop="@dimen/middle_dis"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textSize_3" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
