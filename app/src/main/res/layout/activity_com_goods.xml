<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"></com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>


    <com.infinity.jerry.yyd_tms.ui.customview.Z_SwipeGridView
        android:id="@+id/swipeLayout_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar"></com.infinity.jerry.yyd_tms.ui.customview.Z_SwipeGridView>

    <FrameLayout
        android:id="@+id/coverFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000"
        android:visibility="gone"></FrameLayout>

    <LinearLayout
        android:id="@+id/add_goodsLinear"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/grid_green_10r"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/entry_goods_name"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_2" />

        <EditText
            android:paddingLeft="@dimen/middle_dis"
            android:id="@+id/edGoodsName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="@dimen/textSize_2"

            android:layout_marginLeft="@dimen/normal_dis"
            android:layout_marginRight="@dimen/normal_dis"
            android:layout_marginTop="@dimen/middle_dis"
            android:background="@color/color_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/middle_dis"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/no_good"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/no_cancel"
                android:textColor="@color/color_white"
                android:textSize="@dimen/textSize_2" />

            <TextView
                android:id="@+id/yes_good"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/yes_do"
                android:textColor="@color/color_white"
                android:textSize="@dimen/textSize_2" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvAddGoods"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/color_darkBlue"
        android:gravity="center"
        android:text="@string/addGoods"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textSize_2" />
</RelativeLayout>
