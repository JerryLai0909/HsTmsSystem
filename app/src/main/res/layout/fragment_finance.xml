<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="52dp"></com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/level4_gray_light3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/normal_dis"
                android:text="丰富资源等你发现" />

            <com.infinity.jerry.yyd_tms.ui.customview.ZBossItemView
                android:id="@+id/resources"
                android:layout_width="match_parent"
                android:visibility="gone"

                android:layout_height="wrap_content"
                app:image_reference="@mipmap/tms_icon_goodsource"
                app:text_content="找货源" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"

                android:background="@color/level3_gray_light2" />

            <com.infinity.jerry.yyd_tms.ui.customview.ZBossItemView
                android:id="@+id/companyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:image_reference="@mipmap/tms_icon_cooper"
                app:text_content="找合作" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/level3_gray_light2" />

            <com.infinity.jerry.yyd_tms.ui.customview.ZBossItemView
                android:id="@+id/market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"

                app:image_reference="@mipmap/tms_icon_store"
                app:text_content="物流商城" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/level4_gray_light3"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/normal_dis"
                android:text="老板专属配置权限" />

            <com.infinity.jerry.yyd_tms.ui.customview.ZBossItemView
                android:id="@+id/point_conf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image_reference="@mipmap/tms_icon_boss_point"
                app:text_content="网点／人员" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/level3_gray_light2" />


            <com.infinity.jerry.yyd_tms.ui.customview.ZBossItemView
                android:id="@+id/cooper_conf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image_reference="@mipmap/tms_icon_partner"
                app:text_content="合作伙伴" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/level3_gray_light2" />

            <com.infinity.jerry.yyd_tms.ui.customview.ZBossItemView
                android:id="@+id/declar_conf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image_reference="@mipmap/tms_main_search"
                app:text_content="运单声明设置" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/level3_gray_light2" />

            <com.infinity.jerry.yyd_tms.ui.customview.ZBossItemView
                android:id="@+id/declar_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image_reference="@mipmap/tms_main_other"
                app:text_content="费率设置" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/level3_gray_light2" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
