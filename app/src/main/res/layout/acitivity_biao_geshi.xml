<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height">

    </com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>

    <LinearLayout
        android:id="@+id/llNormal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/normal_dis"
            android:text="标签模板--普通版"
            android:textColor="@color/level0_black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imNormal"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@mipmap/tms_icon_choose_c_false" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/level3_gray_light2" />

    <LinearLayout
        android:id="@+id/llSimple"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/normal_dis"
            android:text="标签模板--简易版"
            android:textColor="@color/level0_black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imSimple"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@mipmap/tms_icon_choose_c_false" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/level3_gray_light2" />

    <LinearLayout
        android:id="@+id/llBigCompany"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/normal_dis"
            android:text="定制模板-大号公司"
            android:textColor="@color/level0_black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imBigCompany"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@mipmap/tms_icon_choose_c_false" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/level3_gray_light2" />


</LinearLayout>
