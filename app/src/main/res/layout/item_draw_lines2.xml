<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/middle_dis"
        app:cardCornerRadius="@dimen/lower_dis"
        android:elevation="@dimen/lower_dis"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/im_core"
                android:layout_width="wrap_content"
                android:src="@mipmap/yixuanze"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

            <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                android:layout_width="match_parent"
                style="@style/blackTextView"
                android:id="@+id/tvLinesName"
                android:layout_height="match_parent" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>
