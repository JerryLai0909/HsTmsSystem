<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:layout_width="match_parent"
        android:id="@+id/titleBar"
        android:layout_height="wrap_content">

    </com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:layout_marginRight="@dimen/normal_dis"
        android:layout_marginTop="@dimen/normal_dis"
        android:orientation="horizontal">

        <TextView
            style="@style/blackTextView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/normal_dis"
            android:text="网点名称" />

        <EditText
            android:id="@+id/edPointName"
            style="@style/drawBill2_editText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:layout_marginRight="@dimen/normal_dis"
        android:layout_marginTop="@dimen/normal_dis"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            style="@style/blackTextView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/normal_dis"
            android:text="负责人" />

        <EditText
            android:id="@+id/edOwnerName"
            style="@style/drawBill2_editText" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:layout_marginRight="@dimen/normal_dis"
        android:layout_marginTop="@dimen/normal_dis"
        android:orientation="horizontal">

        <TextView
            style="@style/blackTextView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/normal_dis"
            android:textSize="@dimen/textSize_3"
            android:text="负责人手机" />

        <EditText
            android:id="@+id/edPointPhone"
            style="@style/drawBill2_editText"
            android:inputType="number" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:layout_marginRight="@dimen/normal_dis"
        android:layout_marginTop="@dimen/normal_dis"
        android:orientation="horizontal">

        <TextView
            style="@style/blackTextView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/normal_dis"
            android:text="@string/cell" />

        <EditText
            android:id="@+id/edPointCell"
            style="@style/drawBill2_editText"
            android:inputType="number" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:layout_marginRight="@dimen/normal_dis"
        android:layout_marginTop="@dimen/normal_dis"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            style="@style/blackTextView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/normal_dis"
            android:text="@string/address" />

        <EditText
            android:id="@+id/edPointAddr"
            style="@style/drawBill2_editText" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        style="@style/bottom_button"
        android:id="@+id/tvEnsurePoint"
        android:text="@string/yes_do" />


</LinearLayout>
