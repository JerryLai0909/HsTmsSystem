<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="50dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/middle_dis"
        android:layout_marginRight="@dimen/middle_dis"
        android:layout_marginTop="@dimen/lower_dis"
        android:layout_marginBottom="@dimen/lower_dis"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                style="@style/blackTextView"
                android:id="@+id/tvSort"
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/level3_gray_light2" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/textSize_2"
                android:textColor="@color/color_black"
                android:paddingLeft="@dimen/lower_dis"
                android:layout_height="match_parent" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
