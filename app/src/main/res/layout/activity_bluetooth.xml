<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>


    <LinearLayout
        android:id="@+id/ll_conn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_darkBlue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_conn_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/normal_dis"
            android:text="打印机信息"
            android:textColor="@color/color_white" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSearchBt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_darkBlue"
            android:gravity="center"
            android:text="@string/search_bluetooth"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_2" />

        <TextView
            android:id="@+id/tvOpenBle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_darkOrange"
            android:gravity="center"
            android:text="蓝牙已打开"
            android:textColor="@color/color_white" />


    </LinearLayout>


</LinearLayout>
