<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/lower_dis"
        android:elevation="@dimen/lower_dis"
        android:layout_margin="@dimen/middle_dis"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="35dp">
                <TextView
                    android:id="@+id/trans_time"
                    android:layout_width="wrap_content"
                    style="@style/blackTextView"
                    android:paddingLeft="@dimen/middle_dis"
                    android:text="time"
                    android:gravity="left|center_vertical"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    style="@style/blackTextView"
                    android:paddingLeft="@dimen/middle_dis"
                    android:text=""
                    android:gravity="left|center_vertical"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/trans_oper"
                    android:text="操作员"
                    style="@style/blackTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/middle_dis"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/middle_dis"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/level3_gray_light2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cooperCom"
                        style="@style/blackTextView"
                        android:textColor="@color/level2_gray_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingLeft="@dimen/normal_dis"
                        android:paddingTop="@dimen/middle_dis"
                        android:text="转出"
                        android:textSize="@dimen/textSize_5" />

                    <TextView
                        android:id="@+id/tvStart"
                        style="@style/blackTextView"
                        android:paddingTop="@dimen/lowest_dis"
                        android:gravity="center_horizontal|top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/normal_dis"
                        android:text="namexxx"
                        android:textSize="@dimen/textSize_1" />
                </LinearLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/normal_dis"
                    android:layout_marginRight="@dimen/normal_dis"
                    android:layout_marginTop="@dimen/lower_dis"
                    android:background="@color/level2_gray_light"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cooperPoint"
                        style="@style/blackTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/normal_dis"
                        android:paddingTop="@dimen/middle_dis"
                        android:textColor="@color/level2_gray_light"

                        android:text="转入"
                        android:textSize="@dimen/textSize_5" />

                    <TextView
                        android:id="@+id/tvEnd"
                        style="@style/blackTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingRight="@dimen/normal_dis"
                        android:paddingTop="@dimen/lowest_dis"
                        android:text="name"
                        android:gravity="center_horizontal|top"
                        android:textSize="@dimen/textSize_1" />
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/trans_remark"
                style="@style/blackTextView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/middle_dis"
                android:paddingRight="@dimen/middle_dis"
                android:text="remark:" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
