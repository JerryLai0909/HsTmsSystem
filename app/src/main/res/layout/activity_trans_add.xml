<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOutter"
            style="@style/blackTextView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/normal_dis"
            android:layout_marginRight="@dimen/normal_dis"
            android:layout_weight="1"
            android:background="@drawable/trans_yes"
            android:text="@string/outter_tran"
            android:textColor="@color/color_white" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvInner"
            style="@style/blackTextView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/normal_dis"
            android:layout_marginRight="@dimen/normal_dis"
            android:layout_weight="1"
            android:background="@drawable/trans_not"
            android:text="@string/inner_trans"
            android:textColor="@color/color_black" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/level3_gray_light2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_outter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                style="@style/drawBill2_linear"
                android:layout_marginTop="@dimen/normal_dis">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:text="网点名称" />

                <EditText
                    android:id="@+id/edStation"
                    android:hint="请输入中转站点名称"
                    style="@style/drawBill2_editText"
                    android:layout_marginLeft="@dimen/normal_dis" />
            </LinearLayout>

            <LinearLayout
                style="@style/drawBill2_linear"
                android:layout_marginTop="@dimen/normal_dis">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:text="中转费用"
                    />

                <EditText
                    android:inputType="number"
                    android:id="@+id/edTransFee"
                    android:hint="请输入中转费用"
                    style="@style/drawBill2_editText"
                    android:layout_marginLeft="@dimen/normal_dis" />
            </LinearLayout>

            <TextView
                style="@style/drawBill2_tvStyle"
                android:layout_marginTop="@dimen/normal_dis"
                android:text="备注" />

            <EditText
                android:id="@+id/remark1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/middle_dis"
                android:background="@android:drawable/edit_text" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_inner"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/blackTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="请选择公司" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/blackTextView"
                    android:text="请选择网点"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/level3_gray_light2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="40dp">

              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  style="@style/blackTextView"
                  android:text="搜索公司"
                  android:textColor="@color/tms_hasToTv"
                  android:id="@+id/tvSearchCom"
                  android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/sp_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                </Spinner>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/level3_gray_light2" />


            <LinearLayout
                style="@style/drawBill2_linear"
                android:layout_marginTop="@dimen/normal_dis">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:text="中转费用"
                    />

                <EditText
                    android:inputType="number"
                    android:id="@+id/edTransFee2"
                    android:hint="请输入中转费用"
                    style="@style/drawBill2_editText"
                    android:layout_marginLeft="@dimen/normal_dis" />
            </LinearLayout>


            <TextView
                style="@style/drawBill2_tvStyle"
                android:layout_marginTop="@dimen/normal_dis"
                android:text="备注" />

            <EditText
                android:id="@+id/remark2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="@dimen/middle_dis"
                android:background="@android:drawable/edit_text" />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tvEnsure"
        style="@style/bottom_button"
        android:text="@string/trans_ensure" />


</LinearLayout>
