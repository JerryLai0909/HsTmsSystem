<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>

    <TextView
        style="@style/blackTextView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/level3_gray_light2"
        android:text="查找优化系统提示信息" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edSearch"
            android:layout_width="0dp"
            android:layout_height="@dimen/actionBar_height"
            android:layout_weight="1"
            android:background="@android:drawable/edit_text"
            android:hint="请输入想要查找的姓名"
            android:textSize="@dimen/textSize_2" />

        <TextView
            android:id="@+id/tvSearch"
            style="@style/blackTextView"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/color_darkBlue"
            android:text="@string/search"
            android:textColor="@color/color_white" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFirstInfo"
            style="@style/bottom_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/actionBar_height"
            android:layout_weight="1"
            android:background="@color/color_orange"
            android:text="下载期初客户档案" />

        <TextView
            android:id="@+id/tvUpdateInfo"
            style="@style/bottom_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/actionBar_height"
            android:layout_weight="1"
            android:text="同步实时客户档案" />
    </LinearLayout>


</LinearLayout>
