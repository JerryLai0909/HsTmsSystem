<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:layout_marginRight="@dimen/normal_dis"
        android:layout_marginTop="@dimen/normal_dis"
        android:orientation="horizontal">

        <TextView
            style="@style/blackTextView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/name" />

        <EditText
            android:id="@+id/edManName"
            style="@style/drawBill2_editText" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:layout_marginRight="@dimen/normal_dis"
        android:layout_marginTop="@dimen/normal_dis"
        android:orientation="horizontal">

        <TextView
            style="@style/blackTextView"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机" />

        <EditText
            android:id="@+id/edManPhone"
            style="@style/drawBill2_editText"
            android:inputType="number" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/normal_dis"
         android:background="@color/level3_gray_light2"/>

    <TextView
        android:layout_width="match_parent"
        android:text="此手机号码为该人员登录app的账号\n初始密码为 123456"
        android:textColor="@color/level2_gray_light"
        android:gravity="right"
        android:layout_marginTop="@dimen/middle_dis"
        android:layout_marginRight="@dimen/normal_dis"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvEnsureEdit"
        style="@style/bottom_button"
        android:text="@string/yes_do" />


</LinearLayout>
