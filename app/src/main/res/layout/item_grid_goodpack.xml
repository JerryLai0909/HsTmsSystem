<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/lower_dis"
        android:layout_margin="@dimen/lower_dis"
        app:cardBackgroundColor="@color/color_darkBlue"
        app:cardCornerRadius="@dimen/lower_dis">

        <TextView
            android:id="@+id/item_goodPackName"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_2"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>


</LinearLayout>
