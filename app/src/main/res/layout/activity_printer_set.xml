<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height">

    </com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/grayEf"
            android:gravity="center"
            android:text="输入ip启用网络打印机"
            android:textColor="@color/color_black"
            android:textSize="@dimen/textSize_2" />

        <EditText
            android:id="@+id/edIp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入票据打印机ip"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="14sp">

        </EditText>

        <TextView
            android:id="@+id/tvPiao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBar_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_blue"
            android:gravity="center"
            android:text="保存票据打印机ip地址"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_2" />

        <EditText
            android:id="@+id/edIpPos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:hint="请输入标签打印机ip"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="14sp">

        </EditText>

        <TextView
            android:id="@+id/tvBiao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBar_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_blue"
            android:gravity="center"
            android:text="保存标签打印机ip地址"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_2" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llSet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/color_orange"
            android:gravity="center"
            android:text="启用"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_2" />

        <TextView
            android:id="@+id/tvClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_blue"
            android:gravity="center"
            android:text="清空"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_2" />

    </LinearLayout>
</LinearLayout>
