<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>

    <com.infinity.jerry.yyd_tms.ui.customview.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/level3_gray_light2"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/middle_dis"
                android:text="线路信息"
                android:textColor="@color/color_black" />


            <TextView
                android:id="@+id/tvInit"
                style="@style/blackTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/middle_dis" />

            <TextView
                android:id="@+id/tvTermi"
                style="@style/blackTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/middle_dis" />

            <TextView
                android:id="@+id/tvDestination"
                style="@style/blackTextView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/middle_dis" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/level3_gray_light2"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/middle_dis"
                android:text="收发货人信息"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/consignerInfo"
                style="@style/blackTextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/middle_dis" />

            <TextView
                android:id="@+id/consigneeInfo"
                style="@style/blackTextView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/middle_dis" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/level3_gray_light2"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/middle_dis"
                android:text="货物信息"
                android:textColor="@color/color_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvQuantity"
                    style="@style/blackTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/middle_dis"
                    android:paddingRight="@dimen/normal_dis"
                    android:textColor="@color/color_orange" />

                <TextView
                    android:id="@+id/tvGoodPack"
                    style="@style/blackTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/middle_dis" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/level3_gray_light2"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/middle_dis"
                android:text="费用信息"
                android:textColor="@color/color_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                        android:id="@+id/tvFreight"
                        style="@style/blackTextView"
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/color_orange" />

                    <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                        android:id="@+id/tvAdvance"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                        android:id="@+id/tvCollection"
                        style="@style/blackTextView"
                        android:layout_width="0dp"

                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/color_orange" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                        android:id="@+id/tvDeclar"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                        android:id="@+id/tvValue"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                        android:id="@+id/tvDeliverFee"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                        android:id="@+id/tvReceiveFee"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                        android:id="@+id/tvHandlingFee"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                        android:id="@+id/tvLiftForkFee"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPackinFee"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvUpstairFee"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />


                    <TextView
                        android:id="@+id/tvReturnFee"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvUnderChagFee"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />


                    <TextView
                        android:id="@+id/tvTotalFee"

                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/color_orange" />

                    <TextView
                        android:id="@+id/tvlas"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/color_orange" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/level3_gray_light2"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/middle_dis"
                android:text="支付方式"
                android:textColor="@color/color_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCashPayment"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/color_orange" />

                    <TextView
                        android:id="@+id/tvlas2"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/color_orange" />

                    <TextView
                        android:id="@+id/tvCollPayment"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/color_orange" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBackPayment"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvMonthly"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvDutacPayment"
                        style="@style/blackTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/level3_gray_light2"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/middle_dis"
                android:text="物流信息"
                android:textColor="@color/color_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMethodPay"
                    style="@style/blackTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/color_orange" />

                <TextView
                    android:id="@+id/tvMethodDeli"
                    style="@style/blackTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/color_orange" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

        </LinearLayout>

    </com.infinity.jerry.yyd_tms.ui.customview.BounceScrollView>


    <LinearLayout
        android:id="@+id/llPrint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imBlueTooth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/level3_gray_light2"
            android:scaleType="center"
            android:src="@mipmap/tms_icon_bluetooth_false" />

        <TextView
            android:id="@+id/tvPrint"
            android:layout_width="0dp"
            android:layout_height="@dimen/actionBar_height"
            android:layout_weight="2"
            android:background="@color/color_darkBlue"
            android:gravity="center"
            android:text="打印票据"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_2" />

        <TextView
            android:id="@+id/tvPrintBiao"
            android:layout_width="0dp"
            android:layout_height="@dimen/actionBar_height"
            android:layout_weight="2"
            android:background="@color/color_orange"
            android:gravity="center"
            android:text="打印标签"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_2" />


    </LinearLayout>


</LinearLayout>
