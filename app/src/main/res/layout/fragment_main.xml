<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/level4_gray_light3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/app_main_gradient">

        <TextView
            android:id="@+id/tvTitleBar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/actionBar_height"

            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="勤牛物流平台TMS"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_0" />

        <LinearLayout
            android:id="@+id/statistics"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/tvTitleBar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_dis"
                    android:text="今日"
                    android:textColor="@color/color_white"
                    android:textSize="24sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/normal_dis"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBillCount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/normal_dis"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/tms_hasToTv"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/middle_dis"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/lower_dis"
                        android:text="票"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/textSize_3" />

                    <TextView
                        android:id="@+id/tvBillQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/middle_dis"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/tms_hasToTv"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/middle_dis"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/lower_dis"
                        android:text="件"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/textSize_3" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_dis"
                    android:gravity="center"
                    android:text="营业额"
                    android:textColor="@color/color_white"
                    android:textSize="24sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/normal_dis"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFreight2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:layout_marginStart="14dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/tms_hasToTv"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/middle_dis"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/lower_dis"
                        android:text="元"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/textSize_3" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_dis"
                    android:gravity="center"
                    android:text="代收货款"
                    android:textColor="@color/color_white"
                    android:textSize="24sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/normal_dis"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCollect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:layout_marginStart="14dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/tms_hasToTv"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/middle_dis"
                        android:gravity="center_vertical"
                        android:paddingTop="@dimen/lower_dis"
                        android:text="元"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/textSize_3" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lower_dis"
            android:background="@color/level4_gray_light3"
            android:numColumns="3"
            android:scrollbars="none"></GridView>
    </RelativeLayout>


</LinearLayout>
