<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/level4_gray_light3"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/popCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/lowest_dis">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/drawPadding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/drawPadding">

                <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                    android:id="@+id/tvInit"
                    style="@style/blackTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/tms_icon_send"
                    android:drawablePadding="@dimen/lower_dis"
                    android:gravity="left|center_vertical"
                    android:text="fafafafa" />

                <Spinner
                    android:id="@+id/spTypeSend"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:entries="@array/type_send">

                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/drawPadding">

                <com.infinity.jerry.yyd_tms.ui.customview.AutoScaleTextView
                    android:id="@+id/tvTermi"
                    style="@style/blackTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/tms_icon_receive"
                    android:drawablePadding="@dimen/lower_dis"
                    android:gravity="left|center_vertical"
                    android:text="daodaodao" />

                <LinearLayout
                    android:id="@+id/llDestination"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/blackTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/destination" />

                    <EditText
                        android:id="@+id/edDestination"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/middle_dis"
                        android:layout_weight="1"
                        android:background="@android:drawable/edit_text"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/textSize_4" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <com.infinity.jerry.yyd_tms.ui.customview.BounceScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/middle_dis"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/drawBill2_linear">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:text="@string/consignee" />

                <AutoCompleteTextView
                    android:id="@+id/edConsigneeName"
                    style="@style/drawBill2_editText"
                    android:completionThreshold="1"
                    android:hint="@string/consignee_name" />
            </LinearLayout>

            <LinearLayout style="@style/drawBill2_linear">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:text="@string/phone" />

                <AutoCompleteTextView
                    android:id="@+id/edConsigneePhone"
                    style="@style/drawBill2_editText"
                    android:completionThreshold="1"
                    android:hint="@string/consignee_phone"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout style="@style/drawBill2_linear">

                <TextView
                    android:id="@+id/textView4"
                    style="@style/drawBill2_tvStyle"
                    android:layout_height="wrap_content"
                    android:text="@string/goods" />

                <AutoCompleteTextView
                    android:id="@+id/edGoods"
                    style="@style/drawBill2_editText"
                    android:layout_marginRight="@dimen/lowest_dis" />

                <TextView
                    android:id="@+id/btCommonGoods"
                    style="@style/drawBill2_tvButton"
                    android:text="@string/common" />
            </LinearLayout>

            <LinearLayout
                style="@style/drawBill2_linear"
                android:weightSum="1">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:text="@string/packages" />

                <AutoCompleteTextView
                    android:id="@+id/edPackages"
                    style="@style/drawBill2_editText"
                    android:layout_marginRight="@dimen/lowest_dis" />

                <TextView

                    android:id="@+id/btCommonPackage"
                    style="@style/drawBill2_tvButton"
                    android:layout_height="match_parent"
                    android:layout_weight="0.52"
                    android:text="@string/common" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionBar_height"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/drawBill2_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/drawBill2_tvStyle"
                        android:text="重量" />

                    <AutoCompleteTextView
                        android:id="@+id/edZhongliang"
                        style="@style/drawBill2_editText"
                        android:layout_marginRight="@dimen/lowest_dis"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/lower_dis"
                        android:gravity="center"
                        android:text="KG"
                        android:textColor="@color/color_black" />
                </LinearLayout>

                <LinearLayout
                    style="@style/drawBill2_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/drawBill2_tvStyle"
                        android:text="体积" />

                    <AutoCompleteTextView
                        android:id="@+id/edTiji"
                        style="@style/drawBill2_editText"
                        android:layout_marginRight="@dimen/lowest_dis"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/lower_dis"
                        android:gravity="center"
                        android:text="立方"
                        android:textColor="@color/color_black" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionBar_height"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/drawBill2_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/drawBill2_tvStyle"
                        android:text="@string/goodsCount"
                        android:textColor="@color/color_orange" />

                    <AutoCompleteTextView
                        android:id="@+id/edQuatity"

                        style="@style/drawBill2_editText"
                        android:layout_marginRight="@dimen/lowest_dis"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/lower_dis"
                        android:gravity="center"
                        android:text="@string/COUNT"
                        android:textColor="@color/color_black" />
                </LinearLayout>

                <LinearLayout
                    style="@style/drawBill2_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/drawBill2_tvStyle"
                        android:text="@string/freight"
                        android:textColor="@color/color_orange" />

                    <AutoCompleteTextView
                        android:id="@+id/edFreight"
                        style="@style/drawBill2_editText"
                        android:layout_marginRight="@dimen/lowest_dis"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/lower_dis"
                        android:gravity="center"
                        android:text="@string/RMB"
                        android:textColor="@color/color_black" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionBar_height"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/drawBill2_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/drawBill2_tvStyle"
                        android:text="@string/fee_advance" />

                    <AutoCompleteTextView
                        android:id="@+id/edAdvance"

                        style="@style/drawBill2_editText"
                        android:layout_marginRight="@dimen/lowest_dis"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/lower_dis"
                        android:gravity="center"
                        android:text="@string/RMB"
                        android:textColor="@color/color_black" />
                </LinearLayout>

                <LinearLayout
                    style="@style/drawBill2_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/drawBill2_tvStyle"
                        android:text="@string/fee_collection" />

                    <AutoCompleteTextView
                        android:id="@+id/edCollectionFee"

                        style="@style/drawBill2_editText"
                        android:layout_marginRight="@dimen/lowest_dis"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/lower_dis"
                        android:gravity="center"
                        android:text="@string/RMB"
                        android:textColor="@color/color_black" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/actionBar_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:layout_gravity="center_vertical"
                    android:text="@string/other_fee" />

                <TextView
                    android:id="@+id/tvOtherFees"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/normal_dis"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/btOtherFee"
                    style="@style/drawBill2_tvButton"
                    android:layout_marginTop="@dimen/lower_dis"
                    android:layout_marginRight="@dimen/middle_dis"
                    android:text="@string/choose_fee" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionBar_height"
                android:orientation="horizontal">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:layout_gravity="center_vertical"
                    android:text="@string/fee_total"
                    android:textColor="@color/color_orange" />


                <TextView
                    android:id="@+id/tvTotalFees"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/normal_dis"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/middle_dis"
                    android:gravity="center"
                    android:text="@string/RMB"
                    android:textColor="@color/color_black" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionBar_height"
                android:background="@color/color_white"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/drawBill2_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/drawBill2_tvStyle"
                        android:text="@string/method_pay"
                        android:textColor="@color/color_orange" />

                    <com.infinity.jerry.yyd_tms.ui.customview.RepeatableSpinner
                        android:id="@+id/spPayMethod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/method_pay" />

                </LinearLayout>

                <LinearLayout
                    style="@style/drawBill2_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/drawBill2_tvStyle"
                        android:text="@string/method_getGoods"
                        android:textColor="@color/color_orange" />

                    <com.infinity.jerry.yyd_tms.ui.customview.RepeatableSpinner
                        android:id="@+id/spGetMethod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/method_getGoods" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvMutiPay"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/level4_gray_light3"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/middle_dis"
                android:text="多笔付费用:"
                android:textColor="@color/color_black" />

            <LinearLayout style="@style/drawBill2_linear">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:text="@string/consigner" />

                <AutoCompleteTextView
                    android:id="@+id/edConsignerName"
                    style="@style/drawBill2_editText"
                    android:completionThreshold="1"
                    android:hint="@string/consigner_name" />
            </LinearLayout>

            <LinearLayout style="@style/drawBill2_linear">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:text="@string/phone" />

                <AutoCompleteTextView
                    android:id="@+id/edConsignerPhone"
                    style="@style/drawBill2_editText"
                    android:hint="@string/consigner_phone"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionBar_height"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/drawBill2_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/drawBill2_tvStyle"
                        android:text="@string/back_recipet" />

                    <AutoCompleteTextView
                        android:id="@+id/edBackRecipe"
                        style="@style/drawBill2_editText"
                        android:layout_marginRight="@dimen/lowest_dis"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/lower_dis"
                        android:gravity="center"
                        android:text="@string/shit_fen"
                        android:textColor="@color/color_black" />
                </LinearLayout>

                <LinearLayout
                    style="@style/drawBill2_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/drawBill2_tvStyle"
                        android:text="@string/print_count" />

                    <AutoCompleteTextView
                        android:id="@+id/edPrintCount"
                        style="@style/drawBill2_editText"
                        android:layout_marginRight="@dimen/lowest_dis"
                        android:enabled="false"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/lower_dis"
                        android:gravity="center"
                        android:text="@string/shit_fen"
                        android:textColor="@color/color_black" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout style="@style/drawBill2_linear">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:text="自录货号" />

                <EditText
                    android:id="@+id/edInputNumber"
                    style="@style/drawBill2_editText"
                    android:lines="5"
                    android:maxEms="40" />
            </LinearLayout>

            <LinearLayout style="@style/drawBill2_linear">

                <TextView
                    style="@style/drawBill2_tvStyle"
                    android:text="备注" />

                <AutoCompleteTextView
                    android:id="@+id/edMark"
                    style="@style/drawBill2_editText"
                    android:completionThreshold="1"
                    android:hint="不超过40个字" />

                <TextView
                    android:id="@+id/tvss"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/color_darkBlue"
                    android:gravity="center"
                    android:text="常用"
                    android:textColor="@color/color_white" />
            </LinearLayout>


        </LinearLayout>


    </com.infinity.jerry.yyd_tms.ui.customview.BounceScrollView>

    <LinearLayout
        style="@style/drawBill2_linear"
        android:layout_margin="0dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imBlueTooth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_white"
            android:scaleType="center"
            android:src="@mipmap/tms_icon_bluetooth_false" />

        <TextView
            android:id="@+id/btQuit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_darkBlue"
            android:gravity="center"
            android:text="@string/quit"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/btEnsureSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/color_orange"
            android:gravity="center"
            android:text="@string/save_billing"
            android:textColor="@color/color_white" />

    </LinearLayout>


</LinearLayout>
