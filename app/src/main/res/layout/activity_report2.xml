<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:background="@color/color_orange">

        <ImageView
            android:id="@+id/imBack"
            style="@style/backPress_style" />


        <TextView
            android:id="@+id/tvTimeTitle"
            style="@style/textView_title"
            android:text="收货点营业报表" />


        <ImageView
            android:id="@+id/imRefresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/normal_dis"
            android:paddingRight="@dimen/normal_dis"
            android:src="@mipmap/tms_icon_refresh" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_ll"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="序号"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/textSize_2" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/level3_gray_light2" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/level3_gray_light2" />

                <ListView
                    android:id="@+id/left_listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                </ListView>


            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/hor_scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/report_style"
                            android:text="票数" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="件数" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="运费"

                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="保价费" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="送货费" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="垫付款" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="接货费" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="装卸费" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="包装费" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="上楼费" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="叉吊费" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="回扣" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="欠返" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="仓储费" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="运费合计" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="代收货款" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="现付" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="到付" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="回付" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                        <TextView
                            style="@style/report_style"
                            android:text="月付" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />


                        <TextView
                            style="@style/report_style"
                            android:text="贷款扣" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_white" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/level3_gray_light2" />

                    <ListView
                        android:id="@+id/rightListView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ListView>
                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33222222"
            android:id="@+id/report_cover"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/report_detail"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/xx_termial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lower_dis"
                        android:gravity="center"
                        android:text="发站 - 到站"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/textSize_2" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/xx_waybilling"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="运单号"
                            android:textColor="@color/reload"
                            android:textSize="@dimen/textSize_3" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/xx_artical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:paddingRight="@dimen/normal_dis"
                            android:text="货号"
                            android:textColor="@color/reload"
                            android:textSize="@dimen/textSize_3" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/xx_consigner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="发货人信息"
                            android:textColor="@color/level0_black"
                            android:textSize="@dimen/textSize_3" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/xx_consignee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="@dimen/normal_dis"
                            android:text="收货人信息"
                            android:textColor="@color/level0_black"
                            android:textSize="@dimen/textSize_3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="件数"
                            android:textColor="@color/tms_hasToTv"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:id="@+id/xx_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="件数"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:id="@+id/xx_good"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="货物信息"
                            android:textColor="@color/level0_black"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:id="@+id/xx_pack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="包装信息"
                            android:textColor="@color/level0_black"
                            android:textSize="@dimen/textSize_3" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="运费"
                            android:textColor="@color/tms_hasToTv"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:id="@+id/xx_feright"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="运费"
                            android:textColor="@color/level0_black"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="代收货款"
                            android:textColor="@color/tms_hasToTv"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:id="@+id/xx_collect_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="代收货款"
                            android:textColor="@color/level0_black"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="垫付费"
                            android:textColor="@color/tms_hasToTv"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:id="@+id/xx_advance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="垫付费"
                            android:textColor="@color/level0_black"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="合计费用"
                            android:textColor="@color/tms_hasToTv"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:id="@+id/xx_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="合计费用"
                            android:textColor="@color/level0_black"
                            android:textSize="@dimen/textSize_3" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="其他费用"
                            android:textColor="@color/tms_hasToTv"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:id="@+id/xx_other_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="其他费用"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/textSize_3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="付费方式"
                            android:textColor="@color/tms_hasToTv"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:id="@+id/xx_way_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="付费方式"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="提货方式"
                            android:textColor="@color/tms_hasToTv"
                            android:textSize="@dimen/textSize_3" />

                        <TextView
                            android:id="@+id/xx_way_get"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/normal_dis"
                            android:text="提货方式"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/textSize_3" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
