<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.infinity.jerry.yyd_tms.ui.customview.ZTitlebar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv1Info"
            style="@style/blackTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/normal_dis" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/level3_gray_light2" />

        <TextView
            android:id="@+id/tv2Info"
            style="@style/blackTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/normal_dis" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/level3_gray_light2" />

        <TextView
            android:id="@+id/tv3Info"
            style="@style/blackTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/normal_dis" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/level3_gray_light2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/actionBar_height">
        <TextView
            android:layout_width="wrap_content"
            style="@style/blackTextView"
            android:text="类别: "
            android:layout_marginLeft="@dimen/normal_dis"
            android:layout_height="match_parent" />

        <Spinner
            android:layout_marginLeft="@dimen/normal_dis"
            android:layout_width="100dp"
            android:id="@+id/spType"
            android:entries="@array/unusal_type"
            android:layout_height="40dp">
        </Spinner>
    </LinearLayout>



    <EditText
        android:id="@+id/edType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height"
        android:hint="请填写异常类别"
        android:visibility="gone"
        android:paddingLeft="@dimen/normal_dis" />

    <LinearLayout
        android:layout_marginTop="@dimen/normal_dis"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="@dimen/middle_dis"
        android:layout_marginRight="@dimen/middle_dis"
        android:background="@drawable/edittext_boder"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edContent"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@null"
            android:paddingTop="@dimen/lower_dis"
            android:gravity="left"
            android:maxEms="100"
            android:hint="请输入异常描述"
            android:paddingLeft="@dimen/normal_dis"
            android:textColor="@color/level1_gray_dark"
            android:textSize="@dimen/textSize_3" />


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/level4_gray_light3"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBar_height"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/normal_dis"
                android:text="0/100"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textSize_2" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <TextView style="@style/bottom_button"
        android:text="+添加异常"
        android:id="@+id/tvEnsure"
        />


</LinearLayout>
