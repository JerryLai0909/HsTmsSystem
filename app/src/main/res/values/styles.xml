<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="navi_textView">
        <item name="android:textSize">@dimen/textSize_5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">@dimen/lower_dis</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="backPress_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/higher_dis</item>
        <item name="android:paddingRight">@dimen/higher_dis</item>
        <item name="android:src">@mipmap/tms_icon_back</item>
    </style>

    <style name="drawBill2_linear">
        <item name="android:paddingRight">@dimen/middle_dis</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/actionBar_height</item>
        <item name="android:layout_marginTop">@dimen/lowest_dis</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="drawBill2_tvStyle">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_2</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_marginLeft">@dimen/middle_dis</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="drawBill2_editText">
        <item name="android:background">@android:drawable/edit_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/level2_gray_light</item>
        <item name="android:paddingLeft">@dimen/lower_dis</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textSize_2</item>
    </style>

    <style name="drawBill2_tvButton">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@drawable/tms_main_boder</item>
        <item name="android:textSize">@dimen/textSize_2</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/lower_dis</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="hor_line_view">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/level4_gray_light3</item>

    </style>

    <style name="textView_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/textSize_1</item>
        <item name="android:layout_centerInParent">true</item>

    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@drawable/bg_transprent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="report_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/textSize_2</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="report_style2">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">@dimen/textSize_2</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="report_list_style">
        <item name="android:text">描述</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textSize_2</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="report_list_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/level3_gray_light2</item>

    </style>

    <style name="config_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/normal_dis</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/textSize_3</item>
    </style>

    <style name="tvBillSearch">
        <item name="android:textSize">@dimen/textSize_3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="bottom_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/actionBar_height</item>
        <item name="android:textSize">@dimen/textSize_2</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@color/color_darkBlue</item>
    </style>

    <style name="blackTextView">
        <item name="android:textSize">@dimen/textSize_2</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="grayTextView">
        <item name="android:textSize">@dimen/textSize_2</item>
        <item name="android:textColor">@color/level1_gray_dark</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
